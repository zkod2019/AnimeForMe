<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>SignUpServlet</servlet-name>
        <servlet-class>SignUpServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SignIn</servlet-name>
        <servlet-class>SignIn</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ACM</servlet-name>
        <servlet-class>ACM</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Forums</servlet-name>
        <servlet-class>Forums</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Posts</servlet-name>
        <servlet-class>Posts</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignUpServlet</servlet-name>
        <url-pattern>/SignUpServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SignIn</servlet-name>
        <url-pattern>/SignIn</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ACM</servlet-name>
        <url-pattern>/ACM</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Forums</servlet-name>
        <url-pattern>/Forums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Posts</servlet-name>
        <url-pattern>/Posts</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
